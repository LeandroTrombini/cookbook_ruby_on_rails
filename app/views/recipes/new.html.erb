<h1>Cadastrar receita</h1>  

<%= form_with model: @recipe do | f | %>
  <div class="field form-group">  
    <%= f.label 'Nome' %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label 'Tipo de receita' %>
    <%= f.text_field :recipe_type, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label 'CulinÃ¡ria' %>
    <%= f.text_field :cuisine, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label 'Ingredientes' %>
    <%= f.text_area :ingredients, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label 'Modo de preparo' %>
    <%= f.text_field :cook_method, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label 'Tempo de preparo' %>
    <%= f.number_field :cook_time, class:"form-control" %>
  </div><br />
  <div class="actions">
    <%= f.submit 'Salvar', class:"btn btn-primary" %>
  </div>
<% end %>
